<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Link to custom stylesheet -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    
    <!-- Include Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <title>All Users</title>
</head>
<body class="bg-zinc-900 text-white">

    <!-- Main container with padding -->
    <div class="w-full h-full p-10">
        
        <!-- Back to Home link -->
        <a class="text-blue-500 inline-block mb-10" href="/">Back to Home</a>

        <!-- Page title -->
        <h1 class="tracking-tighter text-3xl mb-3">All Users</h1>
        
        <!-- Users container with flex and gap to handle layout -->
        <div class="users flex gap-3 flex-wrap">
            <!-- Check if there are users, and display them -->
            <% if (users.length > 0) { %>
                <% users.forEach((user) => { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        
                        <!-- User image container -->
                        <div class="w-full h-60 rounded-lg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="User Image">
                        </div>
                        
                        <!-- User name -->
                        <h3 class="mt-3 text-xl tracking-tighter"><%= user.name %></h3>
                        
                        <!-- User email -->
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        
                        <!-- Action buttons for editing or deleting the user -->
                        <div class="flex gap-3 mt-7">
                            <a class="text-zinc-200" href="/edit/<%= user._id%>">Edit user</a>
                            <!-- Delete link to remove the user by their ID -->
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <!-- Message to display when there are no users -->
                <h3>No Users Yet</h3>
            <% } %>
            
        </div> 
    </div>
</body>
</html>
